<h1>Listing Attractions</h1>

<table>
  <tr>
    <td><strong>Name</strong></td>
    <td><strong>Tickets</strong></td>
    <td><strong>Details</strong></td>
  </tr>
  <% @attractions.each do |ride| %>
    <tr>
      <td><%= ride.name %></td>
      <td><%= ride.tickets %></td>
      <% if current_user.admin %>
        <td><%= link_to "Show #{ride.name}", attraction_path(ride) %></td>
        <% else %>
          <td><%= link_to "Go on #{ride.name}", attraction_path(ride) %></td>
        <% end %>
    </tr>
  <% end %>
</table>

<%= link_to "New Attraction", new_attraction_path %>
